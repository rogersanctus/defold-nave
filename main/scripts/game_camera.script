local CAMERA_Z_OFFSET = 1000

function init(self)
	local camera_pos = go.get_position('/go_nave')

	camera_pos.y = 480
	camera_pos.z = CAMERA_Z_OFFSET
	go.set_position(camera_pos, '.')

	msg.post('@render:', 'use_camera_projection')
	msg.post('#game_camera', 'acquire_camera_focus')
end

function final(self)
	msg.post('#game_camera', 'release_camera_focus')
end
